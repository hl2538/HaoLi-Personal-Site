<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.haoli.dao.ApiDao">
	
    
	<sql id="CommonQuery">
        <if test="name != null and name != '' ">
            and name=#{name}
        </if>
        <if test="sys != null and sys != '' ">
        	and sys=#{sys}
        </if>
        <if test="sysId != null and sysId != '' ">
        	and sysId=#{sysId}
        </if>
        <if test="category != null and category != '' ">
            and category=#{category}
        </if>
        <if test="categoryId !=null and categoryId !='' ">
        	and categoryId = #{categoryId}
        </if>
        <if test="startTime != null">
            and createTime <![CDATA[>]]> #{startTime}
        </if>
        <if test="endTime != null">
            and createTime <![CDATA[<]]> #{endTime}
        </if>
    </sql>
    
    
    <insert id="add" parameterType = "java.util.Map">
    	insert into
    		t_api(
    			name,
    			URI,
    			sys,
    			sysId,
    			category,
    			categoryId,
    			remark,
    			header,
    			request,
    			response,
    			createTime	
    		)values(
    			#{name},
    			#{URI},
    			#{sys},
    			#{sysId},
    			#{category},
    			#{categoryId},
    			#{remark},
    			#{header},
    			#{request},
    			#{response},
				now()
    		)
    </insert>
    
    <select id="list" parameterType = "java.util.Map"  resultType="java.util.Map">
    	select *
    	from 
    		t_api
		where
			id = #{id}
    </select>
    
    <select id="pageList" parameterType = "java.util.Map"  resultType="java.util.Map">
    	select
    		id,
    		name,
    		URI,
    		sys,
    		category
    	from 
    		t_api
    	<where>
 		    <include refid="CommonQuery"/>
    	</where>
    	order by id desc
	    limit #{start},#{limit}
    </select>
    
    
    <update id="update" parameterType = "java.util.Map">
    	update
    		t_api
    	set
    		name = #{name},
    		URI = #{URI},
    		sys = #{sys},
    		sysId = #{sysId},
    		category = #{category},
    		categoryId = #{categoryId},
    		remark = #{remark},
    		header = #{header},
    		request = #{request},
    		response = #{response},
    		lastUpdateTime = now()
    	where
    		id = #{id}
    </update>
    
    <delete id="delete" parameterType = "java.lang.Long">
    	delete from t_api where id = #{id}
    </delete>
    
    <select id="count" parameterType="java.util.Map" resultType="java.lang.Integer">
        select
            count(1)
        from
            t_api
        <where>
	        <include refid="CommonQuery"/>
	    </where>
    </select>
    
        
    <insert id = "addCategory" parameterType = "java.util.Map" useGeneratedKeys="true" keyProperty="id">
    	insert into
    		t_api_category(
    			name,
    			sysId,
    			createTime
    		)values(
    			#{name},
    			#{sysId},
    			now()
    		)
    </insert>
    
    <update id = "updateCategory" parameterType = "java.util.Map">
    	update
    		t_api_category
    	set
    		name = #{name},
    		sysId = #{sysId},
    		lastUpdateTime = now()
    	where
    		id = #{id}
    </update>
    
    <select id = "pageListCategory" parameterType = "java.util.Map" resultType="java.util.Map">
    	select * 
    	from
    		t_api_category
    	<where>
    		<include refid = "CommonQuery"/>
    	</where>
    	order by id desc
	    limit #{start},#{limit}
    </select>
    
    <delete id = "deleteCategory" parameterType = "java.lang.Long">
    	delete from t_api_category where id = #{id}
    </delete>
    
    <select id = "loadCategoryId" parameterType = "java.lang.String" resultType = "java.lang.Long">
    	select 
    		id
    	from
    		t_api_category
    	where
    		name = #{name}
    </select>
</mapper>